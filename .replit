modules = ["python-3.12", "bash", "python3"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["arrow-cpp", "cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libuv", "libxcrypt", "libyaml", "pkg-config", "poetry", "qhull", "tcl", "tk", "xsimd"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35727
externalPort = 3000

[[ports]]
localPort = 36751
externalPort = 3001

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dashboard"

[[workflows.workflow]]
name = "Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m streamlit run src/dashboard/app.py --server.port 5000 --server.address 0.0.0.0 --server.headless true --browser.gatherUsageStats false --server.enableCORS false --server.enableXsrfProtection false"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["python", "-m", "streamlit", "run", "src/dashboard/app.py", "--server.port", "5000", "--server.address", "0.0.0.0", "--server.headless", "true", "--browser.gatherUsageStats", "false", "--server.enableCORS", "false", "--server.enableXsrfProtection"]
